<%- include("./partials/header") %>

<style>
    .list-container {
        width: 90%;
        margin: auto;
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 25px;
        padding-top: 30px;
    }

    .card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        padding-bottom: 15px;
        overflow: hidden;
    }

    .card img {
        width: 100%;
        height: 220px;
        object-fit: cover;
    }

    .card h3 {
        margin: 10px;
        font-size: 20px;
    }

    .card p {
        margin: 0 10px;
        color: gray;
    }

    .btn-view {
        display: block;
        width: 90%;
        margin: 10px auto;
        padding: 10px;
        text-align: center;
        background: black;
        color: white;
        border-radius: 5px;
        text-decoration: none;
    }
</style>

<h1 style="text-align:center; margin-top: 20px;">All Hotels</h1>

<div class="list-container">

    <% listings.forEach(listing => { %>
        <div class="card">

            <img src="<%= listing.image %>" alt="Listing Image">

            <h3><%= listing.title %></h3>
            <p>â‚¹ <%= listing.price %></p>

            <a href="/listings/<%= listing._id %>" class="btn-view">View Details</a>

        </div>
    <% }) %>

</div>

<%- include("./partials/footer") %>
